{
  "name": "xenon-css-tools",
  "version": "0.1.0",
  "main": "main.js",
  "description": "CSS tools for Xenon.  Includes linting, beautifying and indexing.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XenonApp/css-tools.git"
  },
  "keywords": [
    "xenon",
    "xenon-package"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/XenonApp/css-tools/issues"
  },
  "homepage": "https://github.com/XenonApp/css-tools#readme",
  "xenon": {
    "modes": {
      "css": {
        "commands": {
          "Tools:Beautify": {
            "fn": "beautify",
            "inputs": {
              "preferences": true
            }
          },
          "Tools:Check": {
            "fn": "check",
            "options": {},
            "inputs": {
              "text": true
            },
            "internal": true,
            "sandbox": "check"
          },
          "Tools:Index": {
            "fn": "index",
            "inputs": {
              "text": true
            },
            "internal": true,
            "sandbox": "index"
          }
        },
        "handlers": {
          "check": [
            "Tools:Check"
          ],
          "index": [
            "Tools:Index"
          ]
        }
      }
    }
  }
}
